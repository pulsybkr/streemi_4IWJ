{% extends "base.html.twig" %}

{% block title %}Streemi - Découvrir
{% endblock %}

{% block body %}
	<main class="flex-1 py-10 px-5 sm:px-10">
		<section>
			{% include 'includes/_navigation.html.twig' %}
			
			{% include 'includes/_random_movie_button.html.twig' with {
				'buttonText': 'Trouver un film aléatoirement'
			} %}
		</section>
		<section class="mt-9">
			<div class="flex items-center justify-between">
				<span class="font-semibold text-gray-700 text-base">Nos recommandations</span>
				<div class="flex items-center space-x-2 fill-gray-500">
					<svg class="h-7 w-7 rounded-full border p-1 hover:border-red-600 hover:fill-red-600 fill-gray-500" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
						<path d="M13.293 6.293L7.58 12l5.7 5.7 1.41-1.42 -4.3-4.3 4.29-4.293Z"></path>
					</svg>
					<svg class="h-7 w-7 rounded-full border p-1 hover:border-red-600 hover:fill-red-600 fill-gray-500" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24">
						<path d="M10.7 17.707l5.7-5.71 -5.71-5.707L9.27 7.7l4.29 4.293 -4.3 4.29Z"></path>
					</svg>
				</div>
			</div>
			<div class="mt-4 grid grid-cols-2 gap-y-5 sm:grid-cols-3 gap-x-5">
				{% set recommendedMovies = [
					{
						'image': 'https://upload.wikimedia.org/wikipedia/en/1/14/Tenet_movie_poster.jpg',
						'title': 'Tenet',
						'rank': '1',
						'rating': '7.4',
						'isWatched': false
					},
					{
						'image': 'https://upload.wikimedia.org/wikipedia/en/f/fc/Fight_Club_poster.jpg',
						'title': 'Fight Club',
						'rank': '2',
						'rating': '8.8',
						'isWatched': true
					},
					{
						'image': 'https://upload.wikimedia.org/wikipedia/en/8/8e/Dune_%282021_film%29.jpg',
						'title': 'Dune',
						'rank': '3',
						'rating': '8.1',
						'isWatched': false
					}
				] %}

				{% for movie in recommendedMovies %}
					{% include 'includes/_movie_card.html.twig' with movie %}
				{% endfor %}
			</div>
		</section>
		<section class="mt-9">
			<div class="flex items-center justify-between">
				<span class="font-semibold text-gray-700 text-base">Les films</span>
			</div>
			<ul class="mt-4 grid grid-cols-2 gap-y-5 sm:grid-cols-3 gap-x-5">
				{% set movies = [
					{
						'image': 'https://fr.web.img6.acsta.net/c_310_420/pictures/18/07/02/17/25/3643090.jpg',
						'title': 'Harry Potter 1',
						'year': '2001',
						'rating': '7.4',
						'isWatched': false
					},
					{
						'image': 'https://fr.web.img2.acsta.net/c_310_420/medias/nmedia/00/02/53/35/affiche0.jpg',
						'title': 'Harry Potter 2',
						'year': '2002',
						'rating': '7.4',
						'isWatched': false
					},
					{
						'image': 'https://fr.web.img5.acsta.net/c_310_420/medias/nmedia/18/35/23/41/18378380.jpg',
						'title': 'Harry Potter 3',
						'year': '2004',
						'rating': '7.4',
						'isWatched': false
					}
				] %}

				{% for movie in movies %}
					{% include 'includes/_movie_card.html.twig' with movie %}
				{% endfor %}
			</ul>
			{% include 'includes/_load_more_button.html.twig' %}
		</section>
	</main>
{% endblock %}
